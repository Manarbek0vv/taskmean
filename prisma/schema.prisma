generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  tasks    Task[]
}

model Task {
  id          Int         @id @default(autoincrement())
  author      User        @relation(fields: [authorId], references: [id])
  authorId    Int
  title       String
  description String
  priority    Priority
  dueDate     DateTime
  isCompleted IsCompleted
}

enum Priority {
  LOW
  MEDIUM
  HIGHT
}

enum IsCompleted {
  NO
  YES
}
